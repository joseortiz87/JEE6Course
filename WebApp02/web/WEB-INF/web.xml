<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterTipoUs</filter-name>
        <filter-class>com.practicas.web.FilterTipoUs</filter-class>
    </filter>
    <filter>
        <filter-name>FilterVisitas</filter-name>
        <filter-class>com.practicas.web.FilterVisitas</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterVisitas</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterTipoUs</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.practicas.web.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLoginExitoso</servlet-name>
        <servlet-class>com.practicas.web.ServletLoginExitoso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>com.practicas.web.ServletLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAddCookie</servlet-name>
        <servlet-class>com.practicas.web.ServletAddCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLoginExitoso</servlet-name>
        <url-pattern>/ServletLoginExitoso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/ServletLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAddCookie</servlet-name>
        <url-pattern>/addCookie</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
